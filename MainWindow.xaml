<Window x:Class="WpfApp9.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AQI 查詢系統" Height="500" Width="900"
        Background="Beige">
    <Border Background="MistyRose" 
            Margin="20" 
            CornerRadius="10" 
            Padding="15" 
            BorderBrush="LightPink" 
            BorderThickness="2">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="47*"/>
                <RowDefinition Height="318*"/>
            </Grid.RowDefinitions>

            <Button Content="取得最新 AQI 資料" 
                    Height="45" 
                    FontSize="16"
                    FontWeight="Bold"
                    Background="Pink"
                    Click="GetAqiButton_Click"/>

            <DataGrid x:Name="AqiDataGrid" 
                      Grid.Row="1" 
                      Margin="0,15,0,0" 
                      AutoGenerateColumns="True"
                      IsReadOnly="True"
                      FontSize="14"
                      Background="White"
                      Opacity="0.9" Grid.RowSpan="2"/>
        </Grid>
    </Border>
</Window>